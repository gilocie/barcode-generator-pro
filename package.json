{
  "name": "the-backer-bc-gen",
  "version": "1.0.0",
  "description": "Professional Barcode Generator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --windows"
  },
  "author": "Gift Ilocie",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.gosavesite.thebacker",
    "productName": "The Backer Barcode Generator",
    "directories": {
      "buildResources": "build"
    },

    "publish": [{
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "thebacker-updates"
    }],

    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico",
      "forceCodeSigning": false
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.txt",
      "include": "build/installer.nsh"
    }
  }
}
